<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="506.0" prefWidth="557.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.vocabularytms.VocabularyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="textValue"/>
      <ListView prefHeight="300.0" prefWidth="300.0" fx:id="listView"/>
      <Button mnemonicParsing="false" text="Add" onAction="#addWord" fx:id="add"/>
       <Button mnemonicParsing="false" text="Delete" onAction="#deleteWord" fx:id="delete"/>
       <Button mnemonicParsing="false" text="Save" onAction="#saveVocabulary" fx:id="save"/>
   </children>
</VBox>
